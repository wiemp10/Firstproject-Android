<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basicviews"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <Button
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:text="Progress Bar"
                android:layout_marginTop="20dp"
                android:background="#BEB2D5"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Time"
        android:layout_marginTop="20dp"
        android:background="#3042DF"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:drawableRight="@drawable/ic_baseline_access_alarm_24"
        android:paddingRight="10dp"
        />
    <Button

        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Date"
        android:layout_marginTop="20dp"
        android:background="#BE30DFD9"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:drawableRight="@drawable/ic_baseline_calendar_today_24"
        android:paddingRight="10dp"
        />
    <Button

        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Short Toast"
        android:layout_marginTop="20dp"
        android:background="#FAC300"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:onClick="shorttoast"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Long Toast"
        android:layout_marginTop="20dp"
        android:background="#DF3076"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:onClick="longtoast"
        />
            <Button
                android:id="@+id/alert_btn"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:text="Alert Dialog "
                android:layout_marginTop="20dp"
                android:background="#CDDA4C"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:onClick="openalert"

                />

    </LinearLayout>
    </ScrollView>

</LinearLayout>